<Application
	x:Class="CA.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Converters="clr-namespace:CA.Converters"
	StartupUri="Main.xaml"
>
	<Application.Resources>
		<Converters:BoolVisibleConverter
			x:Key="BoolVisibleConverter"
		/>
		<Converters:BoolReverseConverter
			x:Key="BoolReverseConverter"
		/>
		<Converters:BoolCollapsedConverter
			x:Key="BoolCollapsedConverter"
		/>
		<Style
			x:Key="ListViewItemStyle"
			TargetType="ListViewItem"
		>
			<Setter Property="VerticalAlignment" Value="Stretch" />
			<Setter Property="VerticalContentAlignment" Value="Stretch" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="HorizontalContentAlignment" Value="Stretch" />
		</Style>
	</Application.Resources>
</Application>
